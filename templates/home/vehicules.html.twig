{% extends 'base.html.twig' %}

{% block title %}Boutique{% endblock %}

{% block body %}

<section class="row articles">

    {% for vehicule in tabVehicules %}
        
    <article class="col-md-4 mx-auto text-center border border-dark mb-3 p-3 mt-3 mr-1">
        
        <h2>{{ vehicule.titre }}</h2>
                
        
        <div class="content">
            <img src="{{ vehicule.photo }}" alt="" class="img-fluid">
            {{ vehicule.description|slice(0,128)|raw }}
            <p>...</p>
            <br>

            <a href="{{ path('commande_vehicule', {id: vehicule.id}) }}" class="btn btn-primary">Réserver</a>
        </div>
        
        <div class="metadata">
            Ecrit le {{ vehicule.dateEnregistrement|date('d/m/Y à H:i') }}
        </div>



    </article>
    {% endfor %}
</section>

{% endblock %}
